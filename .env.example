# Application Settings - WASL Branding
APP_NAME="WASL"
APP_FULL_NAME="WASL - وصل"
APP_TAGLINE="Connecting Talent, Opportunity, and Remittance"
APP_SUBTITLE="Integrated Digital Platform for Overseas Employment & Remittance Lifecycle Management"
APP_ENV=production
APP_KEY=  # REQUIRED: Run 'php artisan key:generate' to create
APP_DEBUG=false  # SECURITY: Must be false in production!
APP_URL=http://localhost
APP_TIMEZONE=Asia/Karachi

# Contact Information
APP_CONTACT_EMAIL="info@amaninnovatia.com"
APP_CONTACT_WEBSITE="www.amaninnovatia.com"

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=btevta_system
DB_USERNAME=root
DB_PASSWORD=  # SECURITY: Use strong password (16+ characters)

# Cache & Session
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=60

# Session Security (Government Standard)
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Redis (Optional - for caching)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# IMPORTANT: Email is required for password resets and notifications
# See EMAIL_CONFIGURATION.md for detailed setup instructions
#
# For Gmail:
#   MAIL_HOST=smtp.gmail.com
#   MAIL_PORT=587
#   MAIL_USERNAME=your-email@gmail.com
#   MAIL_PASSWORD=your-app-specific-password (NOT your regular password!)
#
# For Office 365:
#   MAIL_HOST=smtp.office365.com
#   MAIL_PORT=587
#   MAIL_USERNAME=your-email@domain.com
#   MAIL_PASSWORD=your-password
#
# For custom SMTP:
#   MAIL_HOST=mail.yourdomain.com
#   MAIL_PORT=587 (or 465 for SSL)
#   MAIL_ENCRYPTION=tls (or ssl for port 465)
#
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password-here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@btevta.gov.pk"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (if using real-time notifications)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Broadcasting
BROADCAST_DRIVER=log

# Vite Asset URL
VITE_APP_NAME="${APP_NAME}"

# File Upload Settings
MAX_UPLOAD_SIZE=20480
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xlsx,xls

# SMS/WhatsApp Settings (Optional)
SMS_ENABLED=false
SMS_GATEWAY_URL=
SMS_API_KEY=
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=

# System Settings
PAGINATION_PER_PAGE=20
SESSION_TIMEOUT=120

# OEP Settings
DEFAULT_SLA_DAYS=7
COMPLAINT_AUTO_ESCALATE=true

# Training Settings
TRAINING_DURATION_MONTHS=3
ATTENDANCE_REQUIRED_PERCENTAGE=80

# Visa Processing
GAMCA_ENABLED=true
ETIMAD_ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION (Government Standard)
# =============================================================================

# Two-Factor Authentication
# IMPORTANT: Should be enabled for admin roles in production
ENABLE_TWO_FACTOR=true
TWO_FACTOR_REQUIRED_ROLES=super_admin,admin,project_director

# Activity Logging
ENABLE_ACTIVITY_LOG=true

# Password Policy (Government Standard - 12+ chars with complexity)
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_HISTORY_COUNT=5
PASSWORD_EXPIRY_DAYS=90
PASSWORD_EXPIRY_WARNING_DAYS=14
PASSWORD_CHECK_COMMON=true

# Role-Based Password Expiry (privileged accounts expire faster)
PASSWORD_EXPIRY_SUPER_ADMIN=60
PASSWORD_EXPIRY_ADMIN=60
PASSWORD_EXPIRY_DIRECTOR=90

# API Token Security (Sanctum)
SANCTUM_TOKEN_EXPIRATION=1440
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# Account Lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# IP Allowlisting for Admin Panel (optional - comma-separated)
# ADMIN_IP_WHITELIST=10.0.0.0/8,192.168.0.0/16

# Backup Settings (if using automated backups)
BACKUP_ENABLED=true
BACKUP_DISK=local
BACKUP_SCHEDULE=daily
BACKUP_ENCRYPTION=AES-256-CBC
BACKUP_ENCRYPTION_PASSWORD=  # REQUIRED if encryption enabled

# Development/Debug Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
