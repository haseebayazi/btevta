# Application Settings - WASL Branding
APP_NAME="WASL"
APP_FULL_NAME="WASL - وصل"
APP_TAGLINE="Connecting Talent, Opportunity, and Remittance"
APP_SUBTITLE="Integrated Digital Platform for Overseas Employment & Remittance Lifecycle Management"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Karachi

# Contact Information
APP_CONTACT_EMAIL="info@amaninnovatia.com"
APP_CONTACT_WEBSITE="www.amaninnovatia.com"

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=btevta_system
DB_USERNAME=root
DB_PASSWORD=

# Cache & Session
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (Optional - for caching)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@btevta.gov.pk"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (if using real-time notifications)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Broadcasting
BROADCAST_DRIVER=log

# Vite Asset URL
VITE_APP_NAME="${APP_NAME}"

# File Upload Settings
MAX_UPLOAD_SIZE=20480
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xlsx,xls

# SMS/WhatsApp Settings (Optional)
SMS_ENABLED=false
SMS_GATEWAY_URL=
SMS_API_KEY=
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=

# System Settings
PAGINATION_PER_PAGE=20
SESSION_TIMEOUT=120
PASSWORD_MIN_LENGTH=8

# OEP Settings
DEFAULT_SLA_DAYS=7
COMPLAINT_AUTO_ESCALATE=true

# Training Settings
TRAINING_DURATION_MONTHS=3
ATTENDANCE_REQUIRED_PERCENTAGE=80

# Visa Processing
GAMCA_ENABLED=true
ETIMAD_ENABLED=true

# Security
ENABLE_TWO_FACTOR=false
ENABLE_ACTIVITY_LOG=true

# Backup Settings (if using automated backups)
BACKUP_ENABLED=false
BACKUP_DISK=local
BACKUP_SCHEDULE=daily

# Development/Debug Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
